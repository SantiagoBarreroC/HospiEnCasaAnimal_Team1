@page
@model HECM.App.Frontend.Pages.MascotaPag.ActualizarModel
@{
}
<h1>Actualizacion de datos Mascotas</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="mascota.Id"></label>
        <input asp-for="mascota.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="mascota.Nombre"></label>
        <input asp-for="mascota.Nombre" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="mascota.TipoMascota"></label>
        <input asp-for="mascota.TipoMascota" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="mascota.Sexo"></label>
        <input asp-for="mascota.Sexo" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="mascota.Direccion"></label>
        <input asp-for="mascota.Direccion" class="form-control" required="required">
    </div>
    <div class="form-group">
        <label asp-for="mascota.FechaNacimiento"></label>
        <input asp-for="mascota.FechaNacimiento" class="form-control" required="required">
    </div>


    <button type="submit" class="btn btn-primary">Actualizar</button>
    
</form>
